@page
@model TienDat_DotNetCore.Pages.Employees.ListModel
@{
}

<h1 class="mb-3">Danh sách nhân viên</h1>
@if (Model.Employees != null && Model.Employees.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Tên nhân viên</th>
                <th>Email</th>
                <th>Lương</th>
                <th>Khoa</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var employee in Model.Employees)
            {
                <tr>
                    <td>@employee.Id</td>
                    <td>@employee.Name</td>
                    <td>@employee.Email</td>
                    <td>@employee.Salary</td>
                    <td>@employee.Department</td>
                    <td>
                        <a href="/Employees/Edit/@employee.Id" class="btn btn-dark">Sửa thông tin</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Không có nhân viên</p>
}